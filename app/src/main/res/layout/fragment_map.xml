<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Route navigation (top) -->
        <LinearLayout
            android:id="@+id/route_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/prev_route_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_media_previous"
                android:backgroundTint="@color/md_theme_primary"
                app:iconTint="@color/md_theme_surface"
                app:cornerRadius="12dp"
                android:text="" />

            <!-- Route info pill -->
            <LinearLayout
                android:id="@+id/route_info_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_route_info"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/route_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 / 2"
                    android:textColor="@color/md_theme_surface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/route_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.2 km"
                    android:textColor="@color/md_theme_surface"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_route_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_media_next"
                android:backgroundTint="@color/md_theme_primary"
                app:iconTint="@color/md_theme_surface"
                app:cornerRadius="12dp"
                android:text="" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Bottom buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="32dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/my_location_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:icon="@drawable/my_location"
                android:contentDescription="@string/my_location_button"
                android:backgroundTint="@color/md_theme_primary"
                app:iconTint="@color/md_theme_surface"
                app:cornerRadius="28dp"
                android:layout_marginBottom="8dp"
                app:iconPadding="0dp"
                android:text="" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/settings_button"
                android:textColor="@color/md_theme_surface"
                android:backgroundTint="@color/md_theme_primary"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
